CC = gcc

FLAGS = -Wall -Werror -Wextra

NAME = 

SUBDIRS = libft

#SRCS = $(wildcard libft/*.c) $(wildcard *.c)
SRCS = $(wildcard *.c)


OBJS = $(SRCS:.c=.o)

$(NAME):	$(OBJS)
	make -C libft
	cp libft/libft.a .
	$(CC) -o $(NAME) $(FLAGS) $(SRCS)

all:			$(NAME)

clean:
				$(RM) $(OBJS)
				make clean -C libft

fclean:			clean
				$(RM) $(NAME)

re:				fclean $(NAME)

.PHONY:			all clean fclean re